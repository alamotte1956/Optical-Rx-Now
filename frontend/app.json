{
  "expo": {
    "name": "Optical Rx Now",
    "slug": "optical-rx-now",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "opticalrxnow",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.opticalrxnow.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Take photos of your eyeglass and contact lens prescriptions",
        "NSPhotoLibraryUsageDescription": "Select prescription photos from your gallery",
        "NSLocationWhenInUseUsageDescription": "Find nearby optical stores like Sam's Club",
        "NSUserTrackingUsageDescription": "This identifier will be used to deliver personalized ads to you."
      }
    },
    "android": {
      "package": "com.opticalrxnow.app",
      "versionCode": 110,
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.opticalrxnow.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0a1628"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-image.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Import prescription photos from your gallery",
          "cameraPermission": "Take photos of your prescriptions to store them"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Find nearby optical stores for eyewear shopping"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "optical-rx-now"
      }
    },
    "privacy": "https://opticalrxnow.com/privacy"
  }
}
