{
  "expo": {
    "name": "Optical Rx Now",
    "slug": "optical-rx-now",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "opticalrxnow",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.opticalrxnow.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Take photos of your prescriptions to store them",
        "NSPhotoLibraryUsageDescription": "Import prescription photos from your gallery",
        "NSPhotoLibraryAddUsageDescription": "Save prescription images to your gallery",
        "NSLocationWhenInUseUsageDescription": "Find nearby optical stores for eyewear shopping",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.opticalrxnow.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0a1628"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Import prescription photos from your gallery",
          "cameraPermission": "Take photos of your prescriptions to store them"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Find nearby optical stores for eyewear shopping"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "optical-rx-now"
      }
    }
  }
}
